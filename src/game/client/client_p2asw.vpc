				$File "$SRCDIR\common\blobulator\parented_func.h"
				$File "$SRCDIR\common\blobulator\point_3D.h"
				$File "$SRCDIR\common\blobulator\smartarray.h"
			}
			
			$File "$SRCDIR\common\blobulator\blob_batch.cpp"

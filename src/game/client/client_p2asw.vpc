		$Folder	"Emulsion"
		{		
			$Folder "GameUI"
			{
				$File "emulsion\gameui\basemodpanel.cpp"
				$File "emulsion\gameui\uigamedata.cpp"
			}
			
			$Folder "Shared"
			{
				$File	"$SRCDIR\game\shared\emulsion\emulsion_gamemovement.cpp"
				$File	"$SRCDIR\game\shared\emulsion\emulsion_gamerules.cpp"
